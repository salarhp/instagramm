= image_tag @pic.image.url
%h1= @pic.title
%p= @pic.description
%p= @pic.user.email

.col.md-6
    .btn-group.pull-right
        -if user_signed_in?
            = link_to "back", root_path, class: 'btn btn-info'
            = link_to "edit", edit_pic_path, class: 'btn btn-success'
            = link_to "delete", pic_path, method: :delete, data: {confirm: "are u sure?"}, class: 'btn btn-danger'
